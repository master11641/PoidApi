@model AuthenticateRequest
@{
    var error = ViewBag.Error;
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    @* <link href="~/css/bootstrap.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-rtl.min.css">
     <link rel="stylesheet" href="~/css/custom-style.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <title>Planiverse Login</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4" style="margin:0 auto;padding-top: 50px;">
                <div class="card card-primary">
                    <div class="card-header">Planiverse Application</div>
                    <form asp-action="Login">
                        <div class="card-body">
                    <div style="color: red;">@error</div>
                    
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-12">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit"  class="btn btn-primary" > <i class='fa fa-sign-in'></i> ورود</button>
                        </div>
                         </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>

</html>
