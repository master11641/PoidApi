  <script>

    $(document).ready(function () {

      $(document).on("click", ".tjax", function (e) {
        $('[data-description]').fielddescription();
        e.preventDefault();
        $(this).tjax(
          {
            scope: '.container-fluid ',
            record: 'true',
            loginUrl: '/NewsSection/Account/Login',

          });
      });

      $("a[href='http://somee.com']").remove();
      //برای نمایش پاپ اور با رفتن موس روی آن

      $(document).on("click", "*[data-poload]", function (event) {
        var e = $(this);
        e.off('hover');
        e.popover({
          "html": true,
          "content": function () {
            var div_id = "tmp-id-" + $.now();
            details_in_popup($(this).data('poload'), div_id);
            return '<div id="' + div_id + '">در حال بارگذاری...</div>';
          }
        });

        function details_in_popup(link, div_id) {
          $.ajax({
            url: link,
            success: function (response) {
              $('#' + div_id).html(response);
            }
          });
        }
      });

      $(document).on("click", "#modalmaximize", function (e) {
        $('#tjaxModal .modal-dialog').css('width', $('body').width());
        $('#tjaxModal .modal-dialog').css('margin-top', '0px');
        $("#tjaxModal .modal-body ").css("height", $(document).height());
        $('#modalminimize').css('display', 'block');
        $('#modalminimize').css('visibility', 'visible');
        $(e.target).css('display', 'none');

      });
      $(document).on("click", "#modalminimize", function (e) {
        $('#tjaxModal .modal-dialog').css('width', '600px');
        $('#tjaxModal .modal-dialog').css('margin-top', '30px');
        $("#tjaxModal .modal-body ").css("height", '500px');
        $('#modalmaximize').css('display', 'block');
        $('#modalmaximize').css('visibility', 'visible');
        $(e.target).css('display', 'none');

      });
      $('[data-toggle="tooltip"]').tooltip();
      // $('[data-toggle="popover"]').popover({ html: true });
      $(document).on("click", '[data-toggle="popover"]', function (e) {
        $('[data-toggle="popover"]').popover({ html: true });
      });
      // Listen for clicks on table originating from .delete element(s)
      $(document).on("click", ".delete", function (event) {
        event.preventDefault();
        $(this).parent().parent().remove();
      });
    });

    $.validator.setDefaults({ ignore: [] });
    // $("form").kendoValidator();
    Culture = "fa-IR";

    $(document).ready(function () {
      $(document).on({
        mouseover: function () {
          $('[data-description]').fielddescription();
        }
      });

    });
  </script>
