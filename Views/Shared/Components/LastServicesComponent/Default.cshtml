@model IEnumerable<ServicePackage>
<div class="card">
              <div class="card-header">
                <h3 class="card-title">آخرین پکیج ها</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                  </button>
                  <button type="button" class="btn btn-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0">
                <ul class="products-list product-list-in-card pl-2 pr-2">
@foreach (var item in Model)
{
    <li class="item">
                    @* <div class="product-img">
                      <img src="dist/img/default-150x150.png" alt="Product Image" class="img-size-50">
                    </div> *@
                    <div class="product-info">
                      <a href="javascript:void(0)" class="product-title">@item.Title
                        <span class="badge badge-warning float-left">@item.Price ریال</span></a>
                      <span class="product-description">
                  @item.Desciption
                      </span>
                    </div>
                  </li>
}

                  
                  <!-- /.item -->
                  
                </ul>
              </div>
              <!-- /.card-body -->
              <div class="card-footer text-center">
                <a href='@Url.Action("Index","ServicePackage")' class="uppercase">نمایش همه پکیج ها</a>
              </div>
              <!-- /.card-footer -->
            </div>