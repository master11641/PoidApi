@model SicknessFood

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}



<h4>ویرایش مریضی مرتبط با غذا</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" id="myFrm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodId" />
            <input type="hidden" asp-for="SicknessId" />
            <div class="form-group ">
               بیمار می تواند این غذا را مصرف کند؟
                <input asp-for="MustBe" />
                <span asp-validation-for="MustBe" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                </div> *@
            <div class="form-group">
                <a class="btn btn-primary btn-lg  tjax"
                    href='@Url.Action("Edit","SicknessFood", new {  foodId=Model.FoodId , sickId=Model.SicknessId  })'
                    forsendform="#myFrm" method="POST" record="false">ثبت تغییرات</a>
                <a class="btn btn-danger btn-lg  tjax"
                    href='@Url.Action("Delete","SicknessFood", new {  foodId=Model.FoodId , sickId=Model.SicknessId  })'
                    forsendform="#myFrm" method="POST" record="false">حذف مریضی </a>
            </div>

        </form>
    </div>
</div>
