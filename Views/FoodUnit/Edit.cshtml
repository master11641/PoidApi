@model FoodUnit

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<h4>ویرایش و حذف واحد غذا</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" id="myFrm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodId" />
            <input type="hidden" asp-for="UnitId" />
            <div class="form-group">
                <label asp-for="Calorie" class="control-label"></label>
                <input asp-for="Calorie" class="form-control" />
                <span asp-validation-for="Calorie" class="text-danger"></span>
            </div>
            <div class="form-group">
            <a class="btn btn-primary btn-lg  tjax" href='@Url.Action("Edit","FoodUnit", new {  foodId=Model.FoodId , unitId=Model.UnitId  })' forsendform="#myFrm" method="POST" record="false">ثبت تغییرات</a>
 <a class="btn btn-danger btn-lg  tjax" href='@Url.Action("Delete","FoodUnit", new {  foodId=Model.FoodId , unitId=Model.UnitId  })' forsendform="#myFrm" method="POST" record="false">حذف واحد </a>

            </div>
        </form>
    </div>
</div>



